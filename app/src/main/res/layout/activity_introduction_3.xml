<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeScreenBackgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/UIIntoTextTop_LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/UITitle_Intro2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_title"
            android:gravity="center"
            android:textSize="26sp"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/ui_instructions"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/UIIntroBottomHomeButtonBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        android:orientation="horizontal"
        android:gravity="center"

        android:layout_marginTop="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UIIntoTextTop_LinearLayout2"
        >

        <ImageView
            android:id="@+id/UIIntroHomeHomeButton"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/guihome"
            android:layout_gravity="center"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/UIIntroHomeBookmarkButton"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/guibookmark"
            android:layout_gravity="center"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/UIIntroHomeShuffleButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/shuffleiconclearimage"


            android:layout_gravity="center"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/UIIntroInfoButton"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/guiinfoitemimage"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/UIIntroIconText_LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/UIIntroBottomHomeButtonBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/UIIntroIconInfoTitle_TextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Icon Description"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/UIIntroIconText_TextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="Click each icon for instructions."
            android:textSize="18sp"

            android:layout_marginStart="12dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>