<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NatureMenuActivity"
    android:background="@color/nature_primary">


    <ScrollView
        android:id="@+id/natureScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/natureBottomActionBar_Menu"
        app:layout_constraintEnd_toEndOf="parent"
        >

      <GridLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:columnCount="2"
          android:rowCount="3"
          android:layout_gravity="center"

          android:layout_marginTop="16dp"

          >

          <LinearLayout
              android:id="@+id/natureMenuE1_LinearLayout"
              android:layout_width="125dp"
              android:layout_height="125dp"

              android:orientation="vertical"
              android:layout_marginEnd="32dp"
              android:background="@drawable/roundedbutton"

              android:layout_marginBottom="32dp"
              android:layout_marginTop="32dp"
              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:text="#1"
                  android:textSize="18sp"
                  android:textColor="@color/nature_primary_dark"

                  android:layout_gravity="center_horizontal"/>

              <ImageView
                  android:id="@+id/natureMenuE1_ImageView"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"

                  android:src="@drawable/leaves"
                  android:scaleType="fitCenter"
                  android:layout_weight="50"

                  android:layout_margin="8dp"/>

              <ImageView
                  android:id="@+id/natureMenuE1Star_ImageView"
                  android:layout_width="34dp"
                  android:layout_height="34dp"

                  android:src="@drawable/greystar"
                  android:layout_gravity="center"
                  />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/natureMenuE2_LinearLayout"
              android:layout_width="125dp"
              android:layout_height="125dp"

              android:orientation="vertical"
              android:background="@drawable/roundedbutton"

              android:layout_marginBottom="32dp"
              android:layout_marginTop="32dp"

              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:text="#2"
                  android:textSize="18sp"
                  android:textColor="@color/nature_primary_dark"

                  android:layout_gravity="center_horizontal"/>


              <ImageView
                  android:id="@+id/natureMenuE2_ImageView"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"

                  android:src="@drawable/leaves"
                  android:scaleType="fitCenter"

                  android:layout_weight="50"

                  android:layout_margin="8dp"/>


              <ImageView
                  android:id="@+id/natureMenuE2Star_ImageView"
                  android:layout_width="34dp"
                  android:layout_height="34dp"

                  android:src="@drawable/greystar"
                  android:layout_gravity="center"
                  />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/natureMenuE3_LinearLayout"
              android:layout_width="125dp"
              android:layout_height="125dp"
              android:orientation="vertical"
              android:background="@drawable/roundedbutton"

              android:layout_marginBottom="32dp"
              android:layout_marginTop="32dp"
              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:text="#3"
                  android:textSize="18sp"
                  android:textColor="@color/nature_primary_dark"

                  android:layout_gravity="center_horizontal"/>


              <ImageView
                  android:id="@+id/natureMenuE3_ImageView"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"

                  android:src="@drawable/leaves"
                  android:scaleType="fitCenter"
                  android:layout_weight="50"

                  android:layout_margin="8dp"/>


              <ImageView
                  android:id="@+id/natureMenuE3Star_ImageView"
                  android:layout_width="34dp"
                  android:layout_height="34dp"

                  android:src="@drawable/greystar"
                  android:layout_gravity="center"
                  />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/natureMenuE4_LinearLayout"
              android:layout_width="125dp"
              android:layout_height="125dp"

              android:orientation="vertical"
              android:background="@drawable/roundedbutton"

              android:layout_marginBottom="32dp"
              android:layout_marginTop="32dp"

              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:text="#4"
                  android:textSize="18sp"
                  android:textColor="@color/nature_primary_dark"

                  android:layout_gravity="center_horizontal"/>


              <ImageView
                  android:id="@+id/natureMenuE4_ImageView"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"

                  android:src="@drawable/leaves"
                  android:scaleType="fitCenter"
                  android:layout_weight="50"

                  android:layout_margin="8dp"/>


              <ImageView
                  android:id="@+id/natureMenuE4Star_ImageView"
                  android:layout_width="34dp"
                  android:layout_height="34dp"

                  android:src="@drawable/greystar"
                  android:layout_gravity="center"
                  />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/natureMenuE5_LinearLayout"
              android:layout_width="125dp"
              android:layout_height="125dp"

              android:orientation="vertical"
              android:background="@drawable/roundedbutton"

              android:layout_marginBottom="32dp"
              android:layout_marginTop="32dp"

              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:text="#5"
                  android:textSize="18sp"
                  android:textColor="@color/nature_primary_dark"

                  android:layout_gravity="center_horizontal"/>

              <ImageView
                  android:id="@+id/natureMenuE5_ImageView"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"

                  android:src="@drawable/leaves"
                  android:scaleType="fitCenter"
                  android:layout_weight="50"

                  android:layout_margin="8dp"/>


              <ImageView
                  android:id="@+id/natureMenuE5Star_ImageView"
                  android:layout_width="34dp"
                  android:layout_height="34dp"

                  android:src="@drawable/greystar"
                  android:layout_gravity="center"
                  />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/natureMenuE6_LinearLayout"
              android:layout_width="125dp"
              android:layout_height="125dp"

              android:orientation="vertical"
              android:background="@drawable/roundedbutton"

              android:layout_marginBottom="32dp"
              android:layout_marginTop="32dp"

              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:text="#6"
                  android:textSize="18sp"
                  android:textColor="@color/nature_primary_dark"

                  android:layout_gravity="center_horizontal"/>

              <ImageView
                  android:id="@+id/natureMenuE6_ImageView"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"

                  android:src="@drawable/leaves"
                  android:scaleType="fitCenter"
                  android:layout_weight="50"

                  android:layout_margin="8dp"/>


              <ImageView
                  android:id="@+id/natureMenuE6Star_ImageView"
                  android:layout_width="34dp"
                  android:layout_height="34dp"

                  android:src="@drawable/greystar"
                  android:layout_gravity="center"
                  />
          </LinearLayout>


      </GridLayout>

    </ScrollView>


    <!-- Nature bottom Action Bar -->
    <LinearLayout
        android:id="@+id/natureBottomActionBar_Menu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        android:orientation="horizontal"
        android:background="@color/nature_primary_dark"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/natureBookmarkButton_Menu"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/bookmark"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/natureHomeButton_Menu"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/home"
            android:layout_gravity="center"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/natureToDoButton_Menu"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/todolist"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>