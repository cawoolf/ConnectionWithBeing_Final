<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:background="@color/Nature_E1_actionBarBackgroundColor"
        android:id="@+id/bottomNatureHomeButtonBar"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/Q1HomeButton"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:src="@drawable/home" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/selfLinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="32dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/selfTitleTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 1"
            android:background="@color/myWhite"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/myBlack">

        </TextView>

        <ImageView
            android:id="@+id/question1Image"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:background="@drawable/waterfall" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>