<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <!--TextView and Button displayed in First Fragment -->

    <ImageView
        android:id="@+id/exercise1_header_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/naturewalk_flat"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <TextView
        android:id="@+id/exercise1_centerText_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/exercise1_centerText"


        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/exercise1_questionsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercise1_header_ImageView" />

    <com.sarnava.textwriter.TextWriter
        android:id="@+id/exercise1_TextWriter"
        android:layout_width="420dp"
        android:layout_height="200dp"

        app:layout_constraintTop_toBottomOf="@id/exercise1_header_ImageView"
        app:layout_constraintBottom_toTopOf="@id/exercise1_questionsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="256dp">

    </com.sarnava.textwriter.TextWriter>


    <ImageView
        android:id="@+id/exercise1_footerImage_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercise1_centerText_TextView"
        app:srcCompat="@drawable/hiking" />

    <Button
        android:id="@+id/exercise1_questionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"

        android:text="@string/exercise1_questionsButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercise1_centerText_TextView" />


</androidx.constraintlayout.widget.ConstraintLayout>